    div.banner-nav
      span
        a.fui-list
      ul.dropdown-menu
        li.dropdown-entry
          a(href='/user') Profile
        li.dropdown-entry
          a(href='/portfolio') Portfolio
        li.dropdown-entry
          a(href='/forums') Forums
        li.dropdown-divider
        li.dropdown-entry
          a(href='/logout') Logout
      div.pure-hidden-desktop.pure-hidden-tablet
        span
          a.fui-list(href='/')
    div.pure-form
      input(id='quicksearch' type="text" name='search' placeholder='Search for Players')
    div.banner-brand
      a(href='/markethome')
        img(src='/img/GoProphetLogo8.jpg')

    button.btn1(style='margin-left: 800px;') Filter
    div#filterdiv
      p#filter
        label(for='amount') Price range:
        input#amount(type='text', style='border: 0; color: #299; font-weight: bold;')
      #slider-range(data-filter='wager')
      p#filter2
        br
        label(for='amount') Fantasy Value:
        input#amount2(type='text', style='border: 0; color: #299; font-weight: bold;')
      #slider-range2(data-filter='fantasyValue')
      div#filters
        h3 Sport
        .button-group.js-radio-button-group(data-filter-group='sport')
          button.button.is-checked(data-filter='') show all
          button.button(data-filter='.Football') nfl
          button.button(data-filter='.Basketball') nba
          button.button(data-filter='.Baseball') mlb
      div#filters1
        h3 Over/Under
        .button-group.js-radio-button-group(data-filter-group='overunder')
          button.button.is-checked(data-filter='') any
          button.button(data-filter='over') Over
          button.button(data-filter='under') Under

