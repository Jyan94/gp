    div.makeBets
      .makeBetForm
        form#betForm.pure-form(action='/submitForm/'+playerId method='post')
          input(type="text" name='search' required=true style='width:160px; height: 30px font-size: 2px' placeholder='Search Players')
          br
          br
          | Wager:
          input(type='number' name='wagerAmount' placeholder='Dollars' required=true style='width:100px' min="0" step="0.01")
          br
          | Value :
          input(type='number' name='fantasyValue' placeholder='Value' required=true style='width: 100px' min="1" step="1")
          br
          br
          input(id = 'radioFormA' type='radio' name='longOrShort' value='Over' checked='checked')
          | Over
          input(id = 'radioFormB' type='radio' name='longOrShort' value='Under')
          | Under
          br
          br
          center
            input#betFormButton.pure-button.button-primary(type='submit' style='background-color: #083f75; color: white; float: left' value="Create")

      div.playercard1
        div.playercard1-playerpic
