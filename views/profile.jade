doctype html
html(lang="en")
  head
    include base_head
  body
    include banner
    div.pure-g-r
      div.pure-u-1-1.banner
        div.pure-u-3-4.banner-inner
          h1
            a(href='/')=title
      div.pure-u-1-2.content(style='width:1080px')
        div.panel(style='height:210px;width:1080px')
          div.left_panel
            h1 #{userInfo.username}'s Profile
            h2 ID: #{userInfo.user_id}
        div#prof-behind
          div#prof-pic(style='background-image: url(#{userInfo.image})')
            div.fileUpload
              div
                span.fui-photo
                span Edit profile photo
              form#prof-upload(enctype='multipart/form-data' action='/upload/image/#{userInfo.username}' method='post')
                input.upload(type='file' name='filefield' onchange='change_async()')
        div.bounding-box.rounded(style='width:1080px')
          div.padded
            h3 Profile Information
            table(border='0', cellpadding='5')
              tr
                td(style='width:150px', align='right')
                  b Name:
                td #{userInfo.first_name} #{userInfo.last_name}
              tr
                td(style='width:150px', align='right')
                  b Money:
                td= userInfo.money
              tr
                td(style='width:150px', align='right')
                  b User since:
                td= userInfo.verified_time
              tr
                td(style='width:150px', align='right')
                  b VIP Status:
                td= userInfo.vip_status
        div.bounding-box.rounded(style='width:1080px')
          div.padded
            h3 Pending Bets
            table(border='0', cellpadding='5')
              tr
                th(style='width:200px', align='center') Bet ID
                th(style='width:200px', align='center') Player ID
              each item in betInfo
                tr
                  td(style='width:200px', align='right') #{item.bet_id}
                  td(style='width:200px', align='right') #{item.player_id}
        ul.tabs
          li
            input#tab1(type='radio', checked='checked', name='tabs')
            label Pending Bets
            div#tab-content1.tab-content.animated.fadeIn
          li
            input#tab2(type='radio', name='tabs')
            label Current Bets
            div#tab-content2.tab-content.animated.fadeIn
          li
            input#tab3(type='radio', name='tabs')
            label Past Bets
            div#tab-content3.tab-content.animated.fadeIn

      script(type='text/javascript', src='http://ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js')
      script(type='application/javascript' src='/js/profile.js')